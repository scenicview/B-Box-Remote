<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#ffffff"
                android:backgroundTint="#444466"/>

            <TextView
                android:id="@+id/tvProjectName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Project Name"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="60dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <!-- Project Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213e"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Info"
                android:textColor="#00bcd4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textColor="#aaaaaa"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to Record"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: "
                    android:textColor="#aaaaaa"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created: "
                    android:textColor="#aaaaaa"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Rover Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213e"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rover Data (B-Box)"
                android:textColor="#00bcd4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- UBX File -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/indicatorUbx"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#888888"/>

                <TextView
                    android:id="@+id/tvUbxFile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="raw_XXXX.ubx (PPK data)"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tvUbxStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not downloaded"
                    android:textColor="#888888"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- CSV File -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <View
                    android:id="@+id/indicatorCsv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#888888"/>

                <TextView
                    android:id="@+id/tvCsvFile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="log_XXXX.csv (depth/IMU)"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tvCsvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not downloaded"
                    android:textColor="#888888"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Download Button -->
            <Button
                android:id="@+id/btnDownloadRover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download from B-Box"
                android:textColor="#ffffff"
                android:backgroundTint="#00bcd4"
                android:layout_marginTop="12dp"/>

            <!-- Download Progress -->
            <LinearLayout
                android:id="@+id/layoutRoverProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressRover"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"/>

                <TextView
                    android:id="@+id/tvRoverProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Downloading... 0%"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Base Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213e"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base Data (Shore Station)"
                android:textColor="#00bcd4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- RTCM File -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/indicatorRtcm"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#888888"/>

                <TextView
                    android:id="@+id/tvRtcmFile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No base file"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tvRtcmOverlap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#4CAF50"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Auto-find Button -->
            <Button
                android:id="@+id/btnFindBaseFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-find Matching Base File"
                android:textColor="#ffffff"
                android:backgroundTint="#00bcd4"
                android:layout_marginTop="12dp"/>

            <!-- Or Import RINEX -->
            <Button
                android:id="@+id/btnImportRinex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import RINEX File"
                android:textColor="#ffffff"
                android:backgroundTint="#444466"
                android:layout_marginTop="8dp"/>

            <!-- Download Progress -->
            <LinearLayout
                android:id="@+id/layoutBaseProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressBase"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"/>

                <TextView
                    android:id="@+id/tvBaseProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Downloading... 0%"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- PPK Processing Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213e"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPK Processing"
                android:textColor="#00bcd4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Processing Status -->
            <TextView
                android:id="@+id/tvPpkStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for rover and base data..."
                android:textColor="#888888"
                android:textSize="14sp"/>

            <!-- Process Button -->
            <Button
                android:id="@+id/btnProcessPpk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Process PPK"
                android:textColor="#ffffff"
                android:backgroundTint="#4CAF50"
                android:enabled="false"
                android:layout_marginTop="12dp"/>

            <!-- Processing Progress -->
            <LinearLayout
                android:id="@+id/layoutPpkProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressPpk"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"/>

                <TextView
                    android:id="@+id/tvPpkProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processing..."
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Results (shown after processing) -->
            <LinearLayout
                android:id="@+id/layoutPpkResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Results:"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <!-- Fixed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#4CAF50"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fixed (cm):"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvFixedPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Float -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#FFEB3B"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Float (10-50cm):"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvFloatPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#FFEB3B"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Single -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#f44336"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single (2-5m):"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvSinglePercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#f44336"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Total Points -->
                <TextView
                    android:id="@+id/tvTotalPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 0 points"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Export Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#16213e"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export"
                android:textColor="#00bcd4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnExportCsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export Merged CSV"
                android:textColor="#ffffff"
                android:backgroundTint="#00bcd4"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnExportZip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export All Files (ZIP)"
                android:textColor="#ffffff"
                android:backgroundTint="#444466"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Delete Project -->
        <Button
            android:id="@+id/btnDeleteProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Project"
            android:textColor="#ffffff"
            android:backgroundTint="#f44336"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
